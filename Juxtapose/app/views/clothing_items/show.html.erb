<h1>Here Is A Clothing Item</h1>

<div>
<%= image_tag @clothing_item.image.url(:medium) %>
<%= image_tag @clothing_item.image.url(:thumb) %>
</div>

<h3><%= @clothing_item.caption %></h3>

<ul class="show-tags">
	<% @tags.each do |tag| %>
	<li>
		<%= tag.text %>
	</li>
	<% end %>
</ul>


<%= button_to("Edit", edit_clothing_item_path(@clothing_item), method: :get) %>

<%= button_to('Delete', clothing_item_path(@clothing_item), method: :delete) %>