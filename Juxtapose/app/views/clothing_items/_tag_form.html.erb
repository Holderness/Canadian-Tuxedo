


  <%= text_field_tag 'tags' %>
  <%= button_tag 'Add Tags', id: 'add' %>


<script>
	$(function(){

			var $text_field = $('#tags');
			var $submit = $('#add');
			var tags = [];

			$submit.on('click', function(e){
				debugger
				e.preventDefault();
				var text_field_value = $text_field.val();
				$text_field.val("");
				var tags_raw = text_field_value.split(",");
				$(tags_raw).each(function(idx, tag){
					tags.push(tag);
				});

			});

	});


</script>