<div class="body">
	<h1 class="heading">Edit this Look</h1>

	<div class="edit-look">
		<h2><%= @look.name %></h2>
		<div class="lookbook">
			<div class="lookbook-inner">
		  <% @look_clothing_items.each do |clothing_item| %>
		  	<div id="<%= clothing_item.id %>">
		    	<%= image_tag clothing_item.image.url(:medium), :class => "look-image" %>
		  	</div>
		  <% end %>
		  </div>
		</div>

		<%= render partial: 'form' %>
	</div>
</div>
